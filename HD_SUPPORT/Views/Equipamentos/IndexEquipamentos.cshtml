@model IEnumerable<HD_SUPPORT.Models.Equipamento>

@{
    ViewData["Title"] = "IndexEquipamentos";
}

<div class="tabela">
    <h1 class="titulo-tabela">Equipamentos</h1>

    <p>
        <a asp-action="NovoEquipamento" class="btn btn-primary">Novo registro</a>
    </p>
    <table class="table" style="box-shadow: 0 50px 10px rgb(255,255,255,0.2);">
        <thead>
            <tr>
                <th>
                    <label>Usuario</label>
                </th>
                <th class ="none">
                    <label>Função</label>
                </th>
                <th>
                    <label>Id Patrimonio</label>
                </th>
                <th class="none">
                    <label>Marca</label>
                </th>
                <th>
                    <label>Condição</label>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeUsuario)
                    </td>
                    <td class="none">
                        @Html.DisplayFor(modelItem => item.CategoriaUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPatrimonio)
                    </td>
                    <td class="none">
                        @Html.DisplayFor(modelItem => item.ModeloMarca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TerminoEmprestimo)
                    </td>
                    <td style="display:flex; justify-content: right;">
                        <a asp-action="AtualizarEquipamento" asp-route-equipamentoid="@item.Id" class="btn btn-primary" style="margin: 0 10px 0 0px;">Atualizar</a>
                        <a asp-action="DetalharEquipamento" asp-route-equipamentoid="@item.Id" class="btn btn-success" style="margin: 0 10px 0 0px;">Detalhes</a>
                        <form asp-action="ExcluirEquipamento" asp-route-equipamentoid="@item.Id">
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>




